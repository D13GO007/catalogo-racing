            .price-list-container {
                border-top: 2px solid #000;
                width: 100%;
            }

            /* CLASE COM√öN PARA LA ESTRUCTURA GRID */
            .grid-structure {
                display: grid;
                grid-template-columns: 70% 30%; /* üî• 70% Referencia | 30% Precio */
                padding: 4px 10px;
                align-items: center;
            }

            /* ENCABEZADO */
            .list-header {
                background: #000;
                color: white !important;
                font-weight: bold;
                font-size: 9pt;
                text-transform: uppercase;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            
            /* ALINEAR EL T√çTULO "PRECIO" A LA DERECHA */
            .list-header span:last-child {
                text-align: right;
            }

            /* FILA DE DATOS */
            .list-data-row {
                border-bottom: 1px solid #ccc;
            }
            .list-data-row:last-child { border-bottom: none; }

            /* NOMBRE REFERENCIA (Columna 1) */
